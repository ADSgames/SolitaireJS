{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:all", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-magic-numbers": 0,
    "id-length": 0,
    "no-magic-numbers": 0,
    "max-params": 0,
    "max-statements": 0,
    "new-cap": 0,
    "class-methods-use-this": 0,
    "sort-imports": 0,
    "one-var": 0
  }
}
